<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/dimen_15dp_">

    <TextView
        android:id="@+id/notice_adapter_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:singleLine="true"
        android:text="这是一个长长的标题"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notice_adapter_title"
        android:layout_marginTop="@dimen/dimen_10dp_"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notice_adapter_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="作者 ： 嘻嘻嘻"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/notice_adapter_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/white"
            android:text="发布时间： 2016-05-20 11：23"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>