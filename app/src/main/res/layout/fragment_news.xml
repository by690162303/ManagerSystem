<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/frag_me_msg_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/frag_me_msg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/black"
            android:clickable="true"
            android:src="@drawable/ic_me_msg_back" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="@color/line" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="65dp"
            android:text="院内公告"/>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/dialog_notice_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center|bottom"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_notice_tv_author"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/dimen_15dp_"
        android:text="作者：笑嘻嘻  时间：2015-5-20 15：35"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/dialog_notice_contant"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:background="@color/white"
        android:gravity="left"
        android:padding="5dp"
        android:text=" 主要内容哦哦发生的开炮时机覅骚的卡片送的靠谱骄傲的就哦啊对你的发挥诉讼idoh到货单啊少"
        android:textColor="@color/black"
        android:textSize="16sp" />
</LinearLayout>