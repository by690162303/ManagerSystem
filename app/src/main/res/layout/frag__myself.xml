<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rela_head"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/skyblue">
        <com.bcx.managersystem.util.RoundedImageView.CircleImageView
            android:id="@+id/frag_me_head_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/morentouxiang"
            android:background="@color/skyblue"
            app:civ_border_color="#222222"
            app:civ_border_width="0.5dp" />
        <!--android:background="@color/skyblue"-->
        <!--<com.bcx.managersystem.util.RoundedImageView.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->

        <!--android:layout_width="90dp"-->
        <!--android:layout_height="90dp"-->

        <!--app:sriv_border_color="#55000000"-->
        <!--app:sriv_border_width="0.5dip" />-->

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@color/skyblue"
            android:clickable="true"
            android:src="@drawable/jiantou" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#ffffff">

        <ListView
            android:id="@+id/frag_me_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:divider="@drawable/list_bottom_line"
            android:dividerHeight="0.5dp"
            android:layout_marginTop="15dp"></ListView>

        <Button
            android:id="@+id/frag_me_exit_bt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:background="@drawable/ic_me_exit"
            android:text="@string/str_frag_me_exit" />
    </RelativeLayout>
</LinearLayout>
