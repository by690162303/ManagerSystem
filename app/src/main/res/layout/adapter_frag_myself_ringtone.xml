<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/list_frag_ringtone_cb"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imageview_selector"
        android:layout_marginRight="@dimen/dimen_20dp_"/>
    <TextView
        android:id="@+id/list_frag_ringtone_tv"
        android:layout_toLeftOf="@+id/list_frag_ringtone_cb"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:gravity="left|center"
        android:layout_marginLeft="@dimen/dimen_20dp_"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="16sp"
        android:hint="提示音"
        />
</RelativeLayout>