<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 应用打开的背景图片 为了不让黑屏显示 -->
        <!--<item name="android:background">@drawable/icon_about</item>-->
        <item name="android:background">#eee</item>
        <!-- 界面切换动画 -->
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right2left</item>
        <item name="android:activityOpenExitAnimation">@anim/right2left2</item>
        <item name="android:activityCloseEnterAnimation">@anim/left2right</item>
        <item name="android:activityCloseExitAnimation">@anim/left2right2</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/top2bottom</item>
        <item name="android:windowExitAnimation">@anim/bottom2top</item>
    </style>
    <!-- LoginActivity -->
    <style name="Login_Style_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@drawable/login_border</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="accountInputBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@drawable/login_border</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="accountEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="buttonBarButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="accountButtonStyle" parent="@style/buttonBarButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- MainActivity -->
    <style name="ac_mian_bottom_layout">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/ic_main_bottom_bg</item>

        <item name="android:onClick">"radioOnclick"</item>
    </style>

    <!-- frag_me_msg -->
    <style name="frag_me_msg_title">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- frag_me_setting -->
    <style name="make_tv_common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="make_tv_common_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="make_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="txt">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blueviolet</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="scheduleInsert_tv1">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#5b4120</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/show_tv_background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:layout_marginLeft">1.5dp</item>
    </style>

    <style name="scheduleInsert_et2">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#5b4120</item>
        <item name="android:maxLines">2</item>
        <item name="android:background">@drawable/show_tv_background</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">1.5dp</item>
    </style>

    <style name="dialog_frag_tv">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="dialog_frag_et">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">@dimen/dimen_10dp_</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
